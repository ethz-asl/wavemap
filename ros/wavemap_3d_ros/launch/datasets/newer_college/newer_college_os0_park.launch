<launch>
  <!-- Wavemap params -->
  <arg name="param_file"
       default="$(find wavemap_3d_ros)/config/newer_college/ouster_os0.yaml"
       doc="Name of the file from which to read wavemap's server params."/>

  <!-- Dataset params -->
  <arg name="only_first_rosbag"
       default="false"
       doc="If true, replay only the first the rosbag in the dataset. If false, replay everything."/>

  <!-- Select the rosbag paths -->
  <!-- NOTE: Relative paths will be resolved w.r.t. ROS_HOME (default ~/.ros) -->
  <arg if="$(arg only_first_rosbag)" name="rosbag_path"
       value="../data/newer_college/2021-ouster-os0-128-alphasense/collection2/park/nc-park-undistorted_0.bag"/>
  <arg unless="$(arg only_first_rosbag)" name="rosbag_path" value="
../data/wavemap_experiments/newer_college/rosbags/park/nc-park-undistorted_0.bag
../data/wavemap_experiments/newer_college/rosbags/park/nc-park-undistorted_1.bag
../data/wavemap_experiments/newer_college/rosbags/park/nc-park-undistorted_2.bag
../data/wavemap_experiments/newer_college/rosbags/park/nc-park-undistorted_3.bag
../data/wavemap_experiments/newer_college/rosbags/park/nc-park-undistorted_4.bag
../data/wavemap_experiments/newer_college/rosbags/park/nc-park-undistorted_5.bag
../data/wavemap_experiments/newer_college/rosbags/park/nc-park-undistorted_6.bag
../data/wavemap_experiments/newer_college/rosbags/park/nc-park-undistorted_7.bag
../data/wavemap_experiments/newer_college/rosbags/park/nc-park-undistorted_8.bag
../data/wavemap_experiments/newer_college/rosbags/park/nc-park-undistorted_9.bag
../data/wavemap_experiments/newer_college/rosbags/park/nc-park-undistorted_10.bag
../data/wavemap_experiments/newer_college/rosbags/park/nc-park-undistorted_11.bag
../data/wavemap_experiments/newer_college/rosbags/park/nc-park-undistorted_12.bag
../data/wavemap_experiments/newer_college/rosbags/park/nc-park-undistorted_13.bag"/>

  <node pkg="tf"
        type="static_transform_publisher"
        name="static_tf_map_to_odom"
        args="6.155904428 -56.59342125 0.9703247249 0.003845974844 0.003257308965 0.4101220695 0.912016714
              map odom 100"/>

  <!-- Run wavemap -->
  <include file="$(find wavemap_3d_ros)/launch/datasets/dataset_base.launch"
           pass_all_args="true"/>
</launch>
