<?xml version="1.0"?>
<package format="2">
    <name>wavemap_all</name>
    <version>0.0.0</version>
    <description>Metapackage that builds all wavemap packages.</description>

    <maintainer email="victorr@ethz.ch">Victor Reijgwart</maintainer>
    <license>BSD</license>
    <url>https://github.com/victorreijgwart/wavemap</url>

    <author email="victorr@ethz.ch">Victor Reijgwart</author>

    <buildtool_depend>catkin</buildtool_depend>

    <exec_depend>wavemap_common</exec_depend>
    <exec_depend>wavemap_2d</exec_depend>
    <exec_depend>wavemap_3d</exec_depend>

    <exec_depend>wavemap_common_ros</exec_depend>
    <exec_depend>wavemap_2d_ros</exec_depend>
    <exec_depend>wavemap_3d_ros</exec_depend>
    <exec_depend>wavemap_msgs</exec_depend>

    <exec_depend>wavemap_rviz_plugin</exec_depend>
    <exec_depend>wavemap_ground_truth</exec_depend>
    <exec_depend>wavemap_simulation</exec_depend>

    <export>
        <metapackage />
    </export>
</package>
